{
  "name": "doradca-ppoz-ai",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "dev:server": "node backend/server/index.js",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "install": "cd frontend && npm install",
    "install:all": "cd frontend && npm install",
    "postinstall": "cd backend && ln -sf ../frontend/node_modules node_modules || true"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}

